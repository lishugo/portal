<div id="feed-stream">
  
  <%
    lastday = -1
    @all.each do |item| %>
      <div class="item">
      <%
      mydate = item[:obj].date_published.getlocal
      if mydate.yday != lastday
        %><div class="item_details"><p style="text-align:right"><%= mydate.strftime('%A, %B %e') %></p></div><%
        lastday = mydate.yday
      end
      %>
        <div class="item_content">
          <%= item[:text] %>
          <a href="<%= item[:obj].urls.first %>"><%= item[:obj].title %></a>
        </div>
        
      </div>
  <% end %>

</div>
